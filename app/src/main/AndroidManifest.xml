<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movinglayout">

    <application
        android:name=".MovingLayoutApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovingLayout">
        <activity android:name=".ui.floorlayout.FloorLayoutActivity"></activity>
        <activity android:name=".ui.framelayoutdemo.FrameLayoutActivity" />
        <activity android:name=".ui.relativelayoutdemo.RelativeLayoutActivity" />
        <activity android:name=".ui.recyclerviewlayout.RecyclerViewLayoutActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>